<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_navigation"
    app:startDestination="@id/navigation_splash">
    <fragment
        android:id="@+id/navigation_splash"
        android:name="com.bocdoc.anydoc.presentation.SplashFragment"
        android:label="SplashFragment" >
        <action
            android:id="@+id/action_splash_to_navigation_onboarding"
            app:destination="@id/navigation_onboarding"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/navigation_onboarding"
        android:name="com.bocdoc.anydoc.presentation.OnboardingFragment"
        android:label="OnboardingFragment" >
        <action
            android:id="@+id/action_onboarding_to_navigation_add_image"
            app:destination="@id/navigation_add_image"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/navigation_add_image"
        android:name="com.bocdoc.anydoc.presentation.AddImageFrament"
        android:label="AddImageFragment" >
        <action
            android:id="@+id/action_add_image_to_navigation_loading"
            app:destination="@id/navigation_loading" />
    </fragment>
    <fragment
        android:id="@+id/navigation_loading"
        android:name="com.bocdoc.anydoc.presentation.LoadingFragment"
        android:label="LoadingFragment" >
        <action
            android:id="@+id/action_loading_to_navigation_ai_result"
            app:destination="@id/navigation_ai_result"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/navigation_ai_result"
        android:name="com.bocdoc.anydoc.presentation.AIResultFragment"
        android:label="AiResultFragment" />
</navigation>